<div class="layout">
  <div class="post-intro">
    <div class="header">
      <div class="background-gradient"></div>
    </div>
  </div>
  <div class="login">
    <div class="login-panl">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <p class="title is-2">Discover the easiest way to manage
            your social network</p>
          <!--Username-->
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <%= f.text_field :username, placeholder: 'Username', class: 'input' %>
              <span class="icon is-small is-left">
          <i class="fa fa-user" aria-hidden="true"></i>
            </p>
          </div>
          <!--Email-->
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <%= f.email_field :email, placeholder: 'Your email address', class: 'input' %>
              <span class="icon is-small is-left">
          <i class="fa fa-envelope"></i>
            </p>
          </div>
          <!--Phone-Number-->
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <%= f.text_field :phone_number, placeholder: 'Phone number', class: 'input' %>
              <span class="icon is-small is-left">
          <i class="fa fa-mobile" aria-hidden="true"></i>
            </p>
          </div>
          <!--Password-->
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <%= f.password_field :password, placeholder: 'Password', class: 'input' %>
              <span class="icon is-small is-left">
          <i class="fa fa-eye-slash" aria-hidden="true"></i>
            </p>
          </div>
          <!--Password-Confirmation-->
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'input' %>
              <span class="icon is-small is-left">
          <i class="fa fa-eye-slash" aria-hidden="true"></i>
            </p>
          </div>
          <!--Buttons-->
          <div class="block">
            <%= f.submit "Sign up", class: 'button button-SignIn is-primary' %>
            <%= link_to "Log in", new_session_path(resource_name), class: 'button button-SignUp is-success is-outlined' %>
          </div>
      <% end %>
    </div>
  </div>


</div>
