<div class="layout">
  <div class="post-intro">
    <div class="header">
      <div class="background-gradient"></div>
    </div>
  </div>

      <div class="login">
        <div class="login-panl">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <p class="title is-2">Discover the easiest way to manage
            your social network</p>

          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <%= f.email_field :email, placeholder: 'Your email address', class: 'input' %>
              <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </p>
          </div>

          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'input' %>
              <span class="icon is-small is-left">
              <i class="fa fa-eye-slash" aria-hidden="true"></i>
            </p>
          </div>
          <div class="block">
            <%= f.submit("Sign In", class: 'button button-SignIn is-primary') %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'button button-SignUp is-success is-outlined' %>
          </div>
          <%= link_to "Forget password?", new_password_path(resource_name) %>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
        <% end %>
        </div>
      </div>
</div>
